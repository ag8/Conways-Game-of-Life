import java.awt.*;
import java.awt.event.*;
import javax.swing.*;

public class HexButtons {
	private JFrame frame;
	private Buttons button;
	private JPanel panel;
	
	public HexButtons() {
		frame = new JFrame();
		panel = new JPanel();
		panel.setBounds(0,0,4000,5000);
		panel.setBackground(Color.white);
		frame.setContentPane(panel);
		button = new Buttons();
		button.setColoring(Color.black);
		button.addMouseListener(new MouseListener() {
			@Override
			public void mouseClicked(MouseEvent e) {
				if (button.getColoring().equals(Color.black)) {
					button.setColoring(Color.green);
					frame.repaint();
				}
				else if (button.getColoring().equals(Color.green)) {
					button.setColoring(Color.black);
					frame.repaint();
				}
			}

			@Override
			public void mousePressed(MouseEvent e) {
				// TODO Auto-generated method stub
				
			}

			@Override
			public void mouseReleased(MouseEvent e) {
				// TODO Auto-generated method stub
				
			}

			@Override
			public void mouseEntered(MouseEvent e) {
				// TODO Auto-generated method stub
				
			}

			@Override
			public void mouseExited(MouseEvent e) {
				// TODO Auto-generated method stub
				
			}
		});
		frame.setTitle("This is a thing");
//		frame.getContentPane().add(button);
		panel.add(button);
		button.revalidate();
		
		frame.pack();
		frame.setSize(400,500);
		frame.setLayout(null);
		frame.setVisible(true);
	}

}
